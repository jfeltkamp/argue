  return [
    'argue_structure_listitem' => [
      'variables' => [
        'url' => NULL,
        'icon' => NULL,
        'line_1' => NULL,
        'line_2' => NULL,
        'meta' => NULL,
        'meta_attributes' => NULL,
      ],
    ],
    'argue_structure_list' => [
      'variables' => [
        'attributes' => NULL,
        'content' => NULL,
      ]
    ],
    'argue_structure_proscons_pill' => [
      'variables' => [
        'pro' => NULL,
        'con' => NULL,
      ]
    ],
    'argue_structure_nested_list' => [
      'variables' => [
        'attributes' => NULL,
        'label' => NULL,
        'level' => NULL,
