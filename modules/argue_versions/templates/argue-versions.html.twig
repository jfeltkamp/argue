<!-- Add you custom twig html here -->
<div class="argue-versions">
  <article class="card argue-versions--description">
    <div class="card__content-wrapper">
      <header class="card-header leading-icon">
        <div class="card-header__icon" aria-hidden="true"><i class="argue-icon" aria-hidden="true">version</i></div>
        <div class="card-header__text">
          <h2 class="card-header__text__top">{{ 'Version overview'|t }}</h2>
          <span class="card-header__text__bot">{{ 'List off all completed versions.'|t }}</span>
        </div>
      </header>
      <div class="card__content-item">
        {{description}}
      </div>

      {% if latest %}
        <h3 class="argue-list--title">{{ 'Latest version'|t }}</h3>
        <div class="argue-list card__content-item">
          <div class="argue-list--items">
            {{ latest }}
          </div>
        </div>
      {% endif %}

      {% if current %}
        <h3 class="argue-list--title">{{ 'Current version'|t }}</h3>
        <div class="argue-list card__content-item">
          <div class="argue-list--items">
            {{ current }}
          </div>
        </div>
      {% endif %}

      {% if history %}
        <h3 class="argue-list--title">{{ 'Version history'|t }}</h3>
        <div class="argue-list card__content-item">
          <div class="argue-list--items">
            {{ history }}
          </div>
        </div>
      {% endif %}

    </div>
  </article>
</div>
