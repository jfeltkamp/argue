{#
/**
 * @file
 * Theme override for tabs.
 */
#}

{%
  set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'mdc-menu-surface--anchor'
]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  <button class="js--toggle-menu material-icons mdc-top-app-bar__action-item mdc-icon-button">more_horiz</button>
  <nav class="mdc-menu mdc-menu-surface argue__tabs" role="navigation" aria-label="{{ 'Context menu'|t }}">
    {{ content }}
  </nav>
</div>
