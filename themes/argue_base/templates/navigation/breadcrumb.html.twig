{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav id="breadcrumbs" class="mdc-breadcrumbs mdc-breadcrumbs--default mdc-elevation--z4" role="navigation" aria-label="Breadcrumbs">
    {% for item in breadcrumb %}
      {% if item.url %}
        <a class="mdc-breadcrumbs__link{% if not loop.first %} mdc-breadcrumbs__link--svg-icon{% endif %}" href="{{ item.url }}">{{ item.text }}</a>
      {% else %}
        <span class="mdc-breadcrumbs__link{% if not loop.first %} mdc-breadcrumbs__link--svg-icon{% endif %}">{{ item.text }}</span>
      {% endif %}
    {% endfor %}
  </nav>
{% endif %}
